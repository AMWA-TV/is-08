{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Describes an input's parameters",
  "title": "Input parameter resource",
  "additionalProperties": false,
  "properties":{
    "offset":{
      "type": "integer"
    },
    "numChannels":{
      "type": "integer"
    },
    "offsetStep":{
      "type": "integer"
    },
    "receiverID":{
      "type": [
        "string",
        "null"
      ],
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    },
    "sourceID":{
      "type": [
        "string",
        "null"
      ],
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    }
  }
}